{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "vitest",
            "@testing-library/jest-dom"
        ],
        "baseUrl": "./src",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@img/*": [
                "img/*"
            ],
            "@aparelhosArray/*": [
                "aparelhos-array/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}